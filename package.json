{
  "name": "phaser-hello-world",
  "version": "1.0.0",
  "description": "This is the 'hello world' sample program of Phaser.io",
  "main": "index.html",
  "scripts": {
    "build": "npm run copyJs && npm run copyHtml",
    "copyHtml": "copyfiles ./index.html public",
    "copyJs": "npm run copyPhaser",
    "copyPhaser": "copyfiles -u 3 ./node_modules/phaser/dist/*.min.js public/js",
    "start": "./node_modules/http-server/bin/http-server",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/reggietheroman/phaser-hello-world.git"
  },
  "keywords": [
    "Phaser",
    "Hello",
    "World"
  ],
  "author": "Reggie Bigornia",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/reggietheroman/phaser-hello-world/issues"
  },
  "homepage": "https://github.com/reggietheroman/phaser-hello-world#readme",
  "dependencies": {
    "copyfiles": "^2.0.0",
    "http-server": "^0.11.1",
    "phaser": "^3.11.0"
  }
}
